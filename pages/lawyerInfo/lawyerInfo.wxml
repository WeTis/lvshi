<view class='laywerInfo'>
  
   <view class='from'>
      <view class="cu-form-group">
        <view class="title">姓名</view>
        <input placeholder="请输入姓名"></input>
      </view>
      <view class="cu-form-group">
        <view class="title">性别</view>
        <!-- <input placeholder="请选择性别"></input> -->
        <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
          <view class="picker">
             <text wx:if="{{index}}">{{picker[index]}}</text>
             <text class='text' wx:else>请选择性别</text>
            <!-- {{index ? picker[index]: '请选择性别'}} -->
          </view>
        </picker>
      </view>
      <view class="cu-form-group">
        <view class="title">年龄</view>
        <input placeholder="统一标题的宽度"></input>
      </view>
      <view class="cu-form-group">
        <view class="title">电话</view>
        <input placeholder="统一标题的宽度"></input>
      </view>
      <view class="cu-bar bg-white margin-top">
        <view class="action">
          上传头像
        </view>
        <!-- <view class="action">
          {{imgList.length}}/4
        </view> -->
      </view>
      <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
          <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
            <image src='{{imgList[index]}}' mode='aspectFill'></image>
            <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
              <text class="cuIcon-close"></text>
            </view>
          </view>
          <view class="solids" bindtap="ChooseImage">
            <text class="cuIcon-cameraadd"></text>
          </view>
      </view>
      </view>
      

      <view class="cu-form-group margin-top">
        <view class="title">关键字</view>
        <input placeholder="输入关键字点击添加"  bindinput='getkeyword' value='{{keyword}}'></input>
        <button class="cu-btn bg-green shadow" bindtap='addKeyword'>添加</button>
      </view>
      <view class="cu-form-group">
        <view class='tags'>
         <view class="cu-tag line-blue radius lg" wx:for="{{keywords}}"  style='position:relative;'  bindtap='delectKeyword' data-index='{{index}}'>
         {{item}}
         <text class='cuIcon-roundclose lg text-red closeIcon'></text>
         </view>
        </view>
      </view>


      <view class="cu-bar bg-white margin-top">
        <view class="action">
          简介
        </view>
      </view>
      <view class="cu-form-group solid-top">
        <textarea maxlength="-1"  placeholder="请输入简介"></textarea>
      </view>
      
      <view class="cu-bar bg-white margin-top">
        <view class="action">
          擅长
        </view>
      </view>
      <view class="cu-form-group solid-top">
        <textarea maxlength="-1"  placeholder="请输入擅长"></textarea>
      </view>

      <view class="cu-bar bg-white margin-top">
        <view class="action">
          执业经历
        </view>
      </view>
      <view class="cu-form-group solid-top">
        <textarea maxlength="-1"  placeholder="请输入执业经历"></textarea>
      </view>

        
   </view>

   <view class="padding flex flex-direction">
    <!-- <button class="cu-btn bg-grey lg">玄灰</button> -->
    <button class="cu-btn bg-blue margin-tb-sm lg">提交</button>
  </view>

</view>
