<view class='consulting'>
  <view class="cu-list menu">
      <view class="cu-item">
          <view class="content">
            <text class="">咨询律师</text>
          </view>
          <view class="action">
            <view class="cu-avatar-group">
              <view class="cu-avatar round sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10004.jpg);"></view>
            </view>
            <text class="text-grey text-sm">张扬</text>
          </view>
      </view>
</view>
<view class='from margin-top'>
      <view class="cu-form-group">
        <view class="title">姓名：</view>
        <input placeholder="姓名"></input>
      </view>
      
       <view class="cu-form-group">
        <view class="title">咨询类型：</view>
        <!-- <input placeholder="请选择性别"></input> -->
        <picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
          <view class="picker">
             <text wx:if="{{index}}">{{picker[index]}}</text>
             <text class='text' wx:else>请选择类型</text>
            <!-- {{index ? picker[index]: '请选择性别'}} -->
          </view>
        </picker>
      </view>

      <view class="cu-form-group">
        <view class="title">所在地：</view>
        <!-- <input placeholder="请选择性别"></input> -->
        <picker bindchange="PickerChange"  mode="region" value="{{region}}" >
          <view class="picker">
             <text wx:if="{{region}}">{{region[0]}}，{{region[1]}}，{{region[2]}}</text>
             <text class='text' wx:else>请选择地址</text>
            <!-- {{index ? picker[index]: '请选择性别'}} -->
          </view>
        </picker>
      </view>

      <view class="cu-form-group margin-top" wx:if="{{!showModule}}">
        <view class="title">问题描述</view>
        <button class="cu-btn bg-green shadow" bindtap='showModuleFn'>模板下单</button>
      </view>
      <view class="cu-form-group" wx:if="{{!showModule}}">
        <textarea maxlength="-1"  placeholder="请输入问题描述"></textarea>
      </view>
      
      <!-- 模板开始 -->
      <view class="cu-form-group margin-top" wx:if="{{showModule}}">
        <view class="title">问题描述</view>
       
      </view>
      <view class="cu-form-group" wx:if="{{showModule}}">
        <textarea maxlength="-1"  placeholder="请输入问题描述"></textarea>
      </view>

      <view class="cu-form-group margin-top" wx:if="{{showModule}}">
        <view class="title">问题描述</view>
       
      </view>
      <view class="cu-form-group" wx:if="{{showModule}}">
        <textarea maxlength="-1"  placeholder="请输入问题描述"></textarea>
      </view>

      <view class="cu-form-group margin-top" wx:if="{{showModule}}">
        <view class="title">问题描述</view>
       
      </view>
      <view class="cu-form-group" wx:if="{{showModule}}">
        <textarea maxlength="-1"  placeholder="请输入问题描述"></textarea>
      </view>

      <view class="cu-form-group margin-top" wx:if="{{showModule}}">
        <view class="title">问题描述</view>
        
      </view>
      <view class="cu-form-group" wx:if="{{showModule}}">
        <textarea maxlength="-1"  placeholder="请输入问题描述"></textarea>
      </view>
      <!-- 模板结束 -->

      <view class="cu-bar bg-white margin-top">
        <view class="action">
          图片上传
        </view>
        <!-- <view class="action">
          {{imgList.length}}/4
        </view> -->
      </view>
      <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
          <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
            <image src='{{imgList[index]}}' mode='aspectFill'></image>
            <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
              <text class="cuIcon-close"></text>
            </view>
          </view>
          <view class="solids" bindtap="ChooseImage">
            <text class="cuIcon-cameraadd"></text>
          </view>
      </view>
      </view>

  </view>

  <view class="padding flex flex-direction">
    <!-- <button class="cu-btn bg-grey lg">玄灰</button> -->
    <button class="cu-btn bg-blue margin-tb-sm lg">确认并支付</button>
  </view>
</view>
